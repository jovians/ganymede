{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out/app",
    "baseUrl": "./",
  },
  "include": [
    "**/*.ts",
    "node_modules/@jovian/type-tools/**/*.ts",
    "node_modules/@jovian/type-tools-iface/**/*.ts",
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/dist/**/*",
    "**/dist-electron/**/*",
    "**/server/**/*",
    "**/*.TEMPLATE.*",
    "profiles/**/*",
    "src/assets/i18n/**/*",
    "src/assets-root/**/*",
    "src/app/ganymede/*.ts",
    "src/app/ganymede/defaults/**/*",
    "src/app/ganymede/template/**/*",
    "src/app/ganymede/electron/**/*"
  ]
}
