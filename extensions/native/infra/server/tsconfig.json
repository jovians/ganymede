{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": false,
    "types": ["node"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "sourceMap": true,
  },
  "include": [
    "src/**/*.ts"
  ]
}
